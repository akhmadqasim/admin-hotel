datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String

  @@map("users")
}

model Member {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  nik          String        @unique
  name         String
  birthDate    DateTime
  birthPlace   String
  reservations Reservation[]

  @@map("members")
}

model Reservation {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  memberId    String    @db.ObjectId
  beginDate   DateTime
  endDate     DateTime?
  roomNumber  String?
  mealCost    Int?
  laundryCost Int?
  otherCost   Int?

  member Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@map("reservations")
}
